# MCP DevLog Environment Configuration
# Copy this file to .env.local and fill in your API keys

# LLM API Keys (Optional - only needed if using AI-powered features)
OPENAI_API_KEY=your-openai-key-here
GEMINI_API_KEY=your-gemini-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here
PERPLEXITY_API_KEY=your-perplexity-key-here

# DevLog Configuration
DEVLOG_WORKSPACE_ID=default
DEVLOG_LOG_LEVEL=info
DEVLOG_SESSION_TIMEOUT=3600

# ChromaDB Configuration (for semantic search)
CHROMADB_HOST=localhost
CHROMADB_PORT=8000

# Planning Tools Configuration
DEVLOG_ENABLE_AI_PLANNING=false
DEVLOG_ENABLE_AI_ANALYSIS=false

# File Paths (defaults should work for most setups)
DEVLOG_BASE_PATH=~/.devlog
DEVLOG_ARCHIVE_PATH=~/.devlog/archive